    <Identifier>Subscribe</Identifier>
    <DisplayName>Monitor Feature</DisplayName>
    <Description>Allow client to receive call information on Device.</Description>
    <DataType>
      <DataTypeIdentifier>MonitoredCommandData</DataTypeIdentifier>
    </DataType>
    <PropertyType>Dynamic</PropertyType>
  </Property>
  <DataTypeDefinition>
    <Identifier>MonitoredCommandData</Identifier>
    <DisplayName>Monitored Command Data</DisplayName>
    <Description></Description>
    <DataType>
      <Structure>
        <Element>
          <Identifier>FeatureId</Identifier>
          <DataType>
            <Basic>String</Basic>
          </DataType>
        </Element>
        <Element>
          <Identifier>CommandId</Identifier>
          <DataType>
            <Basic>String</Basic>
          </DataType>
        </Element>
        <Element>
          <Identifier>ParameterPayload</Identifier>
          <DataType>
            <DataTypeIdentifier>SiLADataType</DataTypeIdentifier>
          </DataType>
        </Element>
        <Element>
          <Identifier>ResultPayload</Identifier>
          <DataType>
            <DataTypeIdentifier>SiLADataType</DataTypeIdentifier>
          </DataType>
        </Element>
      </Structure>
    </DataType>
  </DataTypeDefinition>
  <DataTypeDefinition>
    <Identifier>SiLADataType</Identifier>
    <DisplayName>SiLA Data Type</DisplayName>
    <Description>A generic description of SiLA data type.</Description>
    <DataType>
      <Structure>
        <Element>
          <Identifier>DataTypeDefinition</Identifier>
