<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLA2Version="0.1" FeatureVersion="1.0" Originator="com.madisoft" Category="reader"
        xmlns="http://www.sila-standard.org"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_features/raw/master/schema/FeatureDefinition.xsd">
    <Identifier>ReaderService</Identifier>
    <DisplayName>Reader Service</DisplayName>
    <Description>SiLA 2 Device Reader example - Show basic operations for a device reader like open and close device cover.
    </Description>
    <!-- Commands -->
    <Command>
        <Identifier>OpenCover</Identifier>
        <DisplayName>Open Cover</DisplayName>
        <Description>Open the device cover</Description>
        <Observable>No</Observable>
        <StandardExecutionErrors>
            <StandardExecutionErrorIdentifier>OpenCoverInterrupted</StandardExecutionErrorIdentifier>
        </StandardExecutionErrors>
    </Command>
    <Command>
        <Identifier>CloseCover</Identifier>
        <DisplayName>Close Cover</DisplayName>
        <Description>Close the device cover</Description>
        <Observable>No</Observable>
        <StandardExecutionErrors>
            <StandardExecutionErrorIdentifier>CloseCoverInterrupted</StandardExecutionErrorIdentifier>
        </StandardExecutionErrors>
    </Command>
    <!-- Command Execution Errors -->
    <StandardExecutionError>
        <Identifier>OpenCoverInterrupted</Identifier>
        <DisplayName>Open Cover Interrupted</DisplayName>
        <Description>Opening the device cover was interrupted</Description>
    </StandardExecutionError>
    <StandardExecutionError>
        <Identifier>CloseCoverInterrupted</Identifier>
        <DisplayName>Close Cover Interrupted</DisplayName>
        <Description>Closing the device cover was interrupted</Description>
    </StandardExecutionError>
</Feature>