<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLA2Version="1.0" FeatureVersion="1.0" Originator="org.silastandard" Category="test"
         xmlns="http://www.sila-standard.org"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
    <Identifier>ParameterConstraintsProviderTest</Identifier>
    <DisplayName>Parameter Constraints Provider Test</DisplayName>
    <Description>
        Simple feature on which implementation of the parameter constraint provider is shown.
    </Description>

    <DataTypeDefinition>
        <Identifier>Position</Identifier>
        <DisplayName>Position</DisplayName>
        <Description>Position</Description>
        <DataType>
            <Structure>
                <Element>
                    <Identifier>Identifier</Identifier>
                    <DisplayName>Identifier</DisplayName>
                    <Description>Identifier</Description>
                    <DataType>
                        <Basic>String</Basic>
                    </DataType>
                </Element>
                <Element>
                    <Identifier>X</Identifier>
                    <DisplayName>X</DisplayName>
                    <Description>X</Description>
                    <DataType>
                        <Basic>Integer</Basic>
                    </DataType>
                </Element>
                <Element>
                    <Identifier>Y</Identifier>
                    <DisplayName>Y</DisplayName>
                    <Description>Y</Description>
                    <DataType>
                        <Basic>Integer</Basic>
                    </DataType>
                </Element>
            </Structure>
        </DataType>
    </DataTypeDefinition>

    <Command>
        <Identifier>GoToPos</Identifier>
        <DisplayName>Go to position</DisplayName>
        <Description>Ask the robot to go to the specified position</Description>
        <Observable>No</Observable>
        <Parameter>
            <Identifier>PositionIdentifier</Identifier>
            <DisplayName>PositionIdentifier</DisplayName>
            <Description>The position identifier</Description>
            <DataType>
                <Basic>String</Basic>
            </DataType>
        </Parameter>
    </Command>

    <Command>
        <Identifier>AddPosition</Identifier>
        <DisplayName>Add position</DisplayName>
        <Description>Add a position</Description>
        <Observable>No</Observable>
        <Parameter>
            <Identifier>Position</Identifier>
            <DisplayName>The position</DisplayName>
            <Description>The position to add</Description>
            <DataType>
                <DataTypeIdentifier>Position</DataTypeIdentifier>
            </DataType>
        </Parameter>
    </Command>

    <Command>
        <Identifier>RemovePosition</Identifier>
        <DisplayName>Remove position</DisplayName>
        <Description>Remove a position</Description>
        <Observable>No</Observable>
        <Parameter>
            <Identifier>Identifier</Identifier>
            <DisplayName>The position identifier</DisplayName>
            <Description>The position identifier to remove</Description>
            <DataType>
                <Basic>String</Basic>
            </DataType>
        </Parameter>
    </Command>

    <Property>
        <Identifier>Positions</Identifier>
        <DisplayName>Positions</DisplayName>
        <Description>Positions</Description>
        <Observable>No</Observable>
        <DataType>
            <List>
                <DataType>
                    <DataTypeIdentifier>Position</DataTypeIdentifier>
                </DataType>
            </List>
        </DataType>
    </Property>
</Feature>