<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLAVersion="2" MajorVersion="1" MinorVersion="0" Originator="org.silastandard" Category="examples"
         xmlns="http://www.sila-standard.org"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
    <Identifier>ReaderService</Identifier>
    <DisplayName>Reader Service</DisplayName>
    <Description>
        SiLA 2 Reader example
    </Description>
	<!-- Commands -->
    <Command>
        <Identifier>ReadWell</Identifier>
        <DisplayName>Read Well</DisplayName>
        <Description>Read and present data from one target well</Description>
        <Observable>No</Observable>
        <Parameter>
            <Identifier>TargetWell</Identifier>
            <DisplayName>Well address on the plate</DisplayName>
            <Description>
				Address of the target well on the plate which the reader will try to find, reach
				and will try to read the well data
            </Description>
            <DataType>
				<Basic>String</Basic>
            </DataType>
        </Parameter>
		<Response>
            <Identifier>Value</Identifier>
            <DisplayName>Value</DisplayName>
            <Description>Result value of the well</Description>
            <DataType>
                <Basic>Real</Basic>
            </DataType>
        </Response>
        <StandardExecutionErrors>
            <StandardExecutionErrorIdentifier>WellNotFound</StandardExecutionErrorIdentifier>
            <StandardExecutionErrorIdentifier>ReadInterrupted</StandardExecutionErrorIdentifier>
        </StandardExecutionErrors>
    </Command>
	<Command>
        <Identifier>ReadPlate</Identifier>
        <DisplayName>Read Plate</DisplayName>
        <Description>Go through every plate well and read its result</Description>
        <Observable>Yes</Observable>
		<Response>
            <Identifier>ResultList</Identifier>
            <DisplayName>Result List Values</DisplayName>
            <Description>Result list of values of every well</Description>
            <DataType>
				<List>
					<DataType>
						<Basic>Real</Basic>
					</DataType>
				</List>
            </DataType>
        </Response>
        <StandardExecutionErrors>
            <StandardExecutionErrorIdentifier>ReadInterrupted</StandardExecutionErrorIdentifier>
        </StandardExecutionErrors>
    </Command>
	<Command>
        <Identifier>OpenDoor</Identifier>
        <DisplayName>Open Door</DisplayName>
        <Description>Open the device door</Description>
        <Observable>No</Observable>
        <StandardExecutionErrors>
            <StandardExecutionErrorIdentifier>OpenDoorInterrupted</StandardExecutionErrorIdentifier>
        </StandardExecutionErrors>
    </Command>
	<Command>
        <Identifier>CloseDoor</Identifier>
        <DisplayName>Close Door</DisplayName>
        <Description>Close the device door</Description>
        <Observable>No</Observable>
        <StandardExecutionErrors>
            <StandardExecutionErrorIdentifier>CloseDoorInterrupted</StandardExecutionErrorIdentifier>
        </StandardExecutionErrors>
    </Command>
	<!-- Properties -->
	<Property>
		<Identifier>PlateType</Identifier>
        <DisplayName>Plate Type</DisplayName>
        <Description>
            Support two types of plates: 96 and 384 wells
        </Description>
        <DataType>
			<Constrained>
                <DataType>
                    <Basic>Integer</Basic>
                </DataType>
                <Constraints>
                    <Enumeration>
                        <Value>96</Value>
                        <Value>384</Value>
                    </Enumeration>
                </Constraints>
            </Constrained>
		</DataType>
		<Observable>No</Observable>
	</Property>
	<Property>
		<Identifier>Status</Identifier>
        <DisplayName>Reader Status</DisplayName>
        <Description>
            Current status of the Reader device
			
			Possible values are:
			- Idle: Reader is online and ready for command execution
			- Busy: Reader is executing a command and because of that is busy and cannot execute other command
			- Unavailable: This combines Offline and Disconnected statuses which means that Reader cannot execute any command or get a property
        </Description>
        <DataType>
			<Constrained>
                <DataType>
                    <Basic>String</Basic>
                </DataType>
                <Constraints>
                    <Enumeration>
                        <Value>Idle</Value>
                        <Value>Busy</Value>
                        <Value>Unavailable</Value>
                    </Enumeration>
                </Constraints>
            </Constrained>
		</DataType>
		<Observable>Yes</Observable>
	</Property>
	<!-- Command Execution Errors -->
    <StandardExecutionError>
        <Identifier>WellNotFound</Identifier>
        <DisplayName>Well Not Found</DisplayName>
        <Description>The destination of the well not found or well destination is invalid</Description>
    </StandardExecutionError>
    <StandardExecutionError>
        <Identifier>ReadInterrupted</Identifier>
        <DisplayName>Read Interrupted</DisplayName>
        <Description>Reading the well was impossible or interrupted</Description>
    </StandardExecutionError>
    <StandardExecutionError>
        <Identifier>OpenDoorInterrupted</Identifier>
        <DisplayName>Open Door Interrupted</DisplayName>
        <Description>Opening the device door was interrupted</Description>
    </StandardExecutionError>
	<StandardExecutionError>
        <Identifier>CloseDoorInterrupted</Identifier>
        <DisplayName>Close Door Interrupted</DisplayName>
        <Description>Closing the device door was interrupted</Description>
    </StandardExecutionError>
</Feature>