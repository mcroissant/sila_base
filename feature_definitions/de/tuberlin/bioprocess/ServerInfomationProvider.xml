<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLAVersion="2" MajorVersion="1" MinorVersion="0" MaturityLevel="Draft" Originator="de.tuberlin.bioprocess" UseCase="briefing"
        xmlns="http://www.sila-standard.org" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_features/raw/master/schema/FeatureDefinition.xsd">
    <Identifier>ServerInformationProvider</Identifier>
    <DisplayName>Server Information Provider</DisplayName>
    <Description>Proviedes meta data about the hardware device of the used SiLA Server</Description>
    <Property><!--DeviceName -->
        <Identifier>DeviceName</Identifier>
        <DisplayName>Device Name</DisplayName>
        <Description>Name of the device</Description>
        <DataType>
            <Basic>String</Basic>
        </DataType>
        <PropertyType>Static</PropertyType>
    </Property>
    <Property><!--DeviceSuperior-->
        <Identifier>DeviceSuperior</Identifier>
        <DisplayName>Device Superior</DisplayName>
        <Description>Contact of the person how take care for the device</Description>
        <DataType>
            <Basic>string</Basic>
        </DataType>
        <PropertyType>Static</PropertyType>
    </Property>
    <Property><!--RoomNumber-->
        <Identifier>RoomNumber</Identifier>
        <DisplayName>Room Number</DisplayName>
        <Description>Room Number where the device is located</Description>
        <DataType>
            <Basic>String</Basic>
        </DataType>
        <PropertyType>Static</PropertyType>
    </Property>
    <Property><!--EmerancyContact-->
      <Identifier>EmerancyContact</Identifier>
      <DisplayName>Emerancy Contact</DisplayName>
      <Description>A contact number or email address of a person to call in case of an accident of the device (not of a person)</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
      <PropertyType>Static</PropertyType>
    </Property>
    <Property><!--Firmware-->
        <Identifier>FirmwareVersion</Identifier>
        <DisplayName>Firmware Version</DisplayName>
        <Description>Firmware Version of the Device</Description>
        <DataType>
            <Basic>String</Basic>
        </DataType>
        <PropertyType>Static</PropertyType>
