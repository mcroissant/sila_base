<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLAVersion="2" MajorVersion="1" MinorVersion="0" MaturityLevel="Draft" Originator="de.tuberlin.bioprocess" UseCase="sampling"
         xmlns="http://www.sila-standard.org"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_features/raw/master/schema/FeatureDefinition.xsd">
  <Identifier>PipettorDeviceService</Identifier>
  <DisplayName>Pipettor Device Service</DisplayName>
  <Description>Description of the physical layout of the pipettor device. Adpated form the SiLA Pipettor Specifications (Version 1.0.2 | 2015-12-09)</Description>
  <Command>
    <Identifier>SetDeckDefinition</Identifier>
    <DisplayName>Set Deck Definition</DisplayName>
    <Description>Set the labware located a deck positions. </Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Mode</Identifier>
      <DisplayName>Mode</DisplayName>
      <Description>Set Mode to "Reset" to delete all content prior to defining labware. Set Mode to "Replace" to change only the specified content.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>DeckPositionID</Identifier>
      <DisplayName>Deck Position ID</DisplayName>
      <Description>ID of labware on this DeckLayout (default is 1) Range from 1..n. Multiple LabwareItem may be located on one position.</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>LabwareID</Identifier>
      <DisplayName>Labware ID</DisplayName>
      <Description>Unique name of labware item.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>StackHeight</Identifier>
      <DisplayName>Stack Height</DisplayName>
      <Description>Stack level of labware on position ID.</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>LabwareName</Identifier>
      <DisplayName>Labware Name</DisplayName>
      <Description>Name of type of labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>LabwareType</Identifier>
      <DisplayName>Labware Type</DisplayName>
      <Description>Labware Type according to the SiLA Labware Specification Standard (Version 1.0)</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>Undertaken</Identifier>
      <DisplayName>Undertaken</DisplayName>
      <Description>TRUE if the Command has been untertaken, FALSE if not. </Description>
      <DataType>
        <Basic>Boolean</Basic>
      </DataType>
    </Response>
  </Command>
  <Command>
    <Identifier>SetComponentDefinition</Identifier>
    <DisplayName>Set Component Definition</DisplayName>
    <Description>Components are logical entities representing liquids and their physical location. </Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Mode</Identifier>
      <DisplayName>Mode</DisplayName>
      <Description>Set Mode to "Reset" to delete all content prior to defining labware. Set Mode to "Replace" to change only the specified content.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>DeckPositionID</Identifier>
      <DisplayName>Deck Position ID</DisplayName>
      <Description>ID of labware on this DeckLayout (default is 1) Range from 1..n. Multiple LabwareItem may be located on one position.</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>LabwareID</Identifier>
      <DisplayName>Labware ID</DisplayName>
      <Description>Unique name of the labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>WellID</Identifier>
      <DisplayName>Well ID</DisplayName>
      <Description>Identifies the wells of the labware on the positions stack layer that contain liquid of the component, according to SiLA Pipettor Specifications (Version 1.0.2 | 2015-12-09)</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>ComponentName</Identifier>
      <DisplayName>Component Name</DisplayName>
      <Description>Name of Component.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>Undertaken</Identifier>
      <DisplayName>Undertaken</DisplayName>
      <Description>TRUE if the Command has been untertaken, FALSE if not. </Description>
      <DataType>
        <Basic>Boolean</Basic>
      </DataType>
    </Response>
  </Command>
  <Command>
    <Identifier>GetComponentDefinition</Identifier>
    <DisplayName>Get Component Definition</DisplayName>
    <Description>Components are logical entities representing liquids and their physical location. </Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>ComponentName</Identifier>
      <DisplayName>Component Name</DisplayName>
      <Description>Name of Component.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>DeckPositionID</Identifier>
      <DisplayName>Deck Position ID</DisplayName>
      <Description>ID of labware on this DeckLayout (default is 1) Range from 1..n. Multiple LabwareItem may be located on one position.</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Response>
    <Response>
      <Identifier>LabwareID</Identifier>
      <DisplayName>Labware ID</DisplayName>
      <Description>Unique name of the labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Response>
    <Response>
      <Identifier>WellID</Identifier>
      <DisplayName>Well ID</DisplayName>
      <Description>Identifies the wells of the labware on the positions stack layer that contain liquid of the component, according to SiLA Pipettor Specifications (Version 1.0.2 | 2015-12-09)</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Response>
    <Response>
      <Identifier>ComponentName</Identifier>
      <DisplayName>Component Name</DisplayName>
      <Description>Name of Component.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Response>
  </Command>
  <Command>
    <Identifier>SetTipComponent</Identifier>
    <DisplayName>Set Tip Component</DisplayName>
    <Description>TipComponents are logical entities representing tips and their physical location. </Description>
    <Observable>No</Observable>
    <Parameter>
        <Identifier>WellID</Identifier>
        <DisplayName>Well ID</DisplayName>
        <Description>Identifies the tip slots of the labware that contain tips of the tip component. If WellId is empty string TipRack is empty.</Description>
        <DataType>
          <Basic>Integer</Basic>
        </DataType>
      </Parameter>
    <Parameter> 
      <Identifier>LabwareID</Identifier>
      <DisplayName>Labware ID</DisplayName>
      <Description>Unique name of the labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>TipID</Identifier>
      <DisplayName>Tip ID</DisplayName>
      <Description>Defines the type of the tips managed by the tip component.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>TipComponentNameName</Identifier>
      <DisplayName>Tip Name</DisplayName>
      <Description>Name of Tips.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
  </Command>
  <Command>
    <Identifier>GetTipComponent</Identifier>
    <DisplayName>Get Tip Component</DisplayName>
    <Description>TipComponents are logical entities representing tips and their physical location. </Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>TipComponentName</Identifier>
      <DisplayName>TipComponent Name</DisplayName>
      <Description>Name of TipComponent.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>LabwareID</Identifier>
      <DisplayName>Labware ID</DisplayName>
      <Description>Unique name of the labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Response>
    <Response>
      <Identifier>WellID</Identifier>
      <DisplayName>Well ID</DisplayName>
      <Description>Identifies the tip slots of the labware that contain tips of the tip component. If WellId is empty string TipRack is empty.</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Response>
    <Response>
      <Identifier>TipID</Identifier>
      <DisplayName>Tip ID</DisplayName>
      <Description>Defines the type of the tips managed by the tip component.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Response>
    <Response>
      <Identifier>TipComponentName</Identifier>
      <DisplayName>TipComponent Name</DisplayName>
      <Description>Name of Component.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Response>
  </Command>
  <Property>
    <Identifier>GetDeviceLayout</Identifier>
    <DisplayName>Get Device Layout</DisplayName>
    <Description>Provides information about the current device of the pipettor / liquid handler. Returns a xml stream as specified in SiLA Pipettor Specifications (Version 1.0.2 | 2015-12-09)</Description>
    <DataType>
      <Basic>String</Basic>
    </DataType>
    <PropertyType>Dynamic</PropertyType>
  </Property>
  <Property>
    <Identifier>GetDeckLayout</Identifier>
    <DisplayName>Get Deck Layout</DisplayName>
    <Description>Provides information about the current deck of the pipettor / liquid handler. Returns a xml stream as specified in SiLA Pipettor Specifications (Version 1.0.2 | 2015-12-09)</Description>
    <DataType>
      <Basic>String</Basic>
    </DataType>
    <PropertyType>Dynamic</PropertyType>
  </Property>
</Feature>