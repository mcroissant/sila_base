<?xml version='1.0' encoding='utf-8' ?>
<Feature SiLAVersion='2' MajorVersion='1' MinorVersion='0' MaturityLevel='Draft' Originator='de.tuberlin.bioprocess' UseCase='storing'
        xmlns='http://www.sila-standard.org'
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xsi:schemaLocation='http://www.sila-standard.org https://gitlab.com/SiLA2/sila_features/raw/master/schema/FeatureDefinition.xsd'>
  <Identifier>StorageControler</Identifier>
  <DisplayName>Storage Controler</DisplayName>
  <Description>Controles a storage device</Description>
  <Command>
    <!--GetFromPosition-->
    <Identifier>GetFromPosition</Identifier>
    <DisplayName>Get From Position</DisplayName>
    <Description>Get a Labware from the specified position and presents it to the addressed handover position</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>AttainablePosition</Identifier>
      <DisplayName>Attainable Position</DisplayName>
      <Description>Postion of the labware in the storage device</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>HandoverPosition</Identifier>
      <DisplayName>Handover Postion</DisplayName>
      <Description>Postion of the labware handover</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Response>
    <StandardExecutionErrors>
      <StandardExecutionErrorIdentifier>ExcituctionError</StandardExecutionErrorIdentifier>
      <StandardExecutionErrorIdentifier>InvaldPosition</StandardExecutionErrorIdentifier>
    </StandardExecutionErrors>
  </Command>
  <Command>
    <!--PutFromPosition-->
    <Identifier>PutToPosition</Identifier>
    <DisplayName>Put To Position</DisplayName>
    <Description>Take a labware from the addressed handover position an stores it at the specified position</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>AttainablePosition</Identifier>
      <DisplayName>Attainable Position</DisplayName>
      <Description>Postion in the storage device where the labware will be stored</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>HandoverPosition</Identifier>
      <DisplayName>Handover Postion</DisplayName>
      <Description>Postion of the labware handover</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Response>
    <StandardExecutionErrors>
      <StandardExecutionErrorIdentifier>InvaldPosition</StandardExecutionErrorIdentifier>
      <StandardExecutionErrorIdentifier>ExcituctionError</StandardExecutionErrorIdentifier>
    </StandardExecutionErrors>
  </Command>
</Feature>